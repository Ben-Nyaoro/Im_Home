<div class="container-fluid mt-3">
    <div class="col-12 ml-3">
		<% if user_signed_in? %>
        <h3>My Buddies</h3>
					<div class="d-flex ms-4 align-items-center">
						<div class="buddy-icons col-1">

							<% @buddies.each do |buddy| %>
                <%= link_to buddy_path(buddy) do %>
									<ul class="list-inline ms-2">
										<% if buddy.profile_picture.attached? %>
											<li class="mr-2"><%= cl_image_tag(buddy.profile_picture.key, class: "rounded-circle avatar") %></li>
										<% else %>
											<li class="mr-2"><%= cl_image_tag("cld-sample", class: "rounded-circle avatar" ) %></li>
										<% end %>
									</ul>
                  <% end %>
								<% end %>
								<%= link_to new_buddy_path do %>
									<div class="buddies-icon ms-2">
										<%= image_tag "person-icon.png", width: 50, height: 50 %>
									</div>
								<% end %>
						<% else %>
								<%= link_to new_buddy_path do %>
									<div class="buddies-icon ms-2">
										<p class="card-description border border-light shadow p-3 mb-6 bg-white rounded dark-gray text-capitalize">Let your friends know where you are, so you can feel safe. Tap here to Learn More...</p>
									</div>
								<% end %>
						<% end %>
						</div>
					</div>
		</div>
    <div class="col">
			<div class="jumbotron text-center">
				<%= link_to new_journey_path do %>
					<div class="btn journey btn-primary ml-1 mt-1 fs-5"> Start Journey </div>
				<% end %>
			</div>
    </div>
</div>
