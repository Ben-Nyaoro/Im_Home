<div class="container-fluid">
    <div class="col-12">
        <h1>My Trusted Contacts</h1>
					<div class="row">
						<div class="col-1">
								<% @buddies.each do |buddy| %>
							<div class = "d-flex justify-content-around">
								<li class="list-inline">
									<% if buddy.profile_picture.attached? %>
										<%= cl_image_tag(buddy.profile_picture.key, width: 50, height: 50, class: "rounded-circle") %>
									<% else %>
										<%= cl_image_tag("cld-sample", width: 50, height: 50, class: "rounded-circle" ) %>
									<% end %>
								</li>
							</div>
							<% end %>
								<a href="#" ><%= image_tag "person-icon.png" %></a>
						</div>
					</div>
    </div>
    <div class="col">
        <div class="jumbotron text-center">
            <%# <img src="app/assets/images/berlin-placeholder.png"> %>
            <%#= image_tag "berlin-placeholder.png" %>
        <%= link_to new_journey_path do %>
            <div class="btn btn-primary ml-1 mt-1 fs-5"> Start Journey </div>
				<% end %>
        </div>
    </div>
    <div class="col-12 text-center">
        <div class="row">
            <div class="col-2">
            <p class="text-left">link</p>
            </div>
            <div class="col-8">
            <p class="text-center">blank</p>
            </div>
            <div class="col-2">
            <p class="text-right">avatar</p>
            </div>
        </div>
    </div>
</div>
