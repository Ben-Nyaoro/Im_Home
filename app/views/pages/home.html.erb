<div class="container-fluid">
    <div class="col-12">
        <h1>My Trusted Contacts</h1>
					<div class="d-flex ms-4 align-items-center">
						<div class="buddy-icons col-1">
						<% if user_signed_in? %>
							<% @buddies.each do |buddy| %>
								<ul class="list-inline ms-2">
                  <% if buddy.profile_picture.attached? %>
										<li class="mr-2"><%= cl_image_tag(buddy.profile_picture.key, class: "rounded-circle avatar") %></li>
                  <% else %>
										<li class="mr-2"><%= cl_image_tag("cld-sample", class: "rounded-circle avatar" ) %></li>
                  <% end %>
								</ul>
									<% end %>
								<%= link_to new_buddy_path do %>
									<div class="buddies-icon ms-2">
										<%= image_tag "person-icon.png", width: 50, height: 50 %>
									</div>
								<% end %>
						</div>
						<% else %>
								<%= link_to new_buddy_path do %>
									<div class="buddies-icon ms-2">
										<%= image_tag "person-icon.png", width: 50, height: 50 %>
									</div>
								<% end %>
						<% end %>
						</div>
					</div>
		</div>
    <div class="col">
			<div class="jumbotron text-center">
				<%= link_to new_journey_path do %>
					<div class="btn btn-primary ml-1 mt-1 fs-5"> Start Journey </div>
				<% end %>
			</div>
    </div>
    <div class="col-12 text-center">
			<div class="row">
				<div class="col-2">
				<p class="text-left">link</p>
				</div>
				<div class="col-8">
				<p class="text-center">blank</p>
				</div>
				<div class="col-2">
				<p class="text-right">avatar</p>
				</div>
			</div>
    </div>
</div>
