
<div class="container">
  <div class="row justify-content-center">
    <%  buddies_array = [] %>
    <%  @buddies.each do |s| %>
      <%  buddies_array << [s.name, s.id] %>
    <%  end %>

			<%= simple_form_for [@journey] do |f| %>
      <div id="buddy">
				<%= f.input :buddy_id, collection: buddies_array%>
    </div>
    <div id="startingpoint">
				<%= f.input :starting_point, collection: @user_safe_places %>
    </div>
    <div id="destination">
        <%= f.input :destination, collection: @user_safe_places%>
    </div>
    <div id="modeandtime">
        <%= f.input :mode_of_transportation, collection: ["Bus", "Train", "Taxi/Uber", "Car", "Foot"] %>
				<%= f.input :time_estimate, collection: [10, 20, 30, 40, 50, 60] %>
				<%= f.submit class: 'btn btn-info' %>
    </div>
			<% end %>

  </div>
</div>
