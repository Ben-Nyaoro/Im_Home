
<div class="container">
  <div class="row justify-content-center">
			<%= simple_form_for [@journey] do |f| %>
    <div id="startingpoint">
				<%= f.input :starting_point, collection: safe_places.each do |s|%>
                                                  <%= s.name %>
                                                  <% end %>
    </div>
    <div id="destination">
        <%= f.input :destination %>
    </div>
    <div id="modeandtime">
        <%= f.input :mode_of_transportation %>
				<%= f.input :time_estimate, collection: [10, 20, 30, 40, 50, 60] %>
				<%= f.submit class: 'btn btn-info' %>
    </div>
			<% end %>

  </div>
</div>
