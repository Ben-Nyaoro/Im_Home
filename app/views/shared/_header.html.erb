<% if user_signed_in? %>
	<div class="container-flex mt-3 justify-content-around">
		<div class="row mx-3 header-spread">
			<div class="col-10">
				<%= link_to root_path do %>
					<%= image_tag "Header-logo.png", height: 50 %>
				<% end %>
			</div>
			<div class="col-2 align-items-end">
			<% if user_signed_in? %>
					<%= link_to profile_path do %>
						<% if current_user.profile_picture.attached? %>
							<%= cl_image_tag(current_user.profile_picture.key, class: "rounded-circle avatar") %>
							<% else %>
								<%= image_tag "profile-img.png", height: 40 %>
						<% end %>
					<% end %>
				<% end %>
			</div>
		</div>
	</div>
<% end %>
